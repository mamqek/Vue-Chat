{
    "name": "vue-chat",
    "version": "0.0.0",
    "private": true,
    "main": "index.js",
    "exports": {
        "./service": {
            "require": "./index.js",
            "import": "./index.mjs"
        }, 
        "." : {
            "require": "./src/chat-widget.umd.js",
            "import": "./src/chat-widget.mjs"
        }
    },
    "scripts": {
        "start": "node service/dist/index.js",

        "dev:service": "npx ts-node-dev --project service/tsconfig.json --respawn --transpile-only service/src/index.ts",
        "dev:web": "vite",
        "dev": "concurrently \"npm:dev:service\" \"npm:dev:web\"",
        
        "build:service": "tsc --project service/tsconfig.json",
        "build:web": "vite build",
        "build:main": "tsup index.js --format cjs,esm --dts",
        "build": "npm run build:service && npm run build:web && npm run build:main"
    },
    "dependencies": {
        "@tailwindcss/container-queries": "^0.1.1",
        "axios": "^1.8.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-vue-next": "^0.477.0",
        "pinia": "^3.0.1",
        "reka-ui": "^2.0.2",
        "socket.io-client": "^4.8.1",
        "tailwind-merge": "^3.0.2",
        "tailwindcss-animate": "^1.0.7",
        "vite-plugin-vuetify": "^2.1.0",
        "vue": "^3.5.13",
        "vuetify": "^3.7.15"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.2.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.2",
        "sass-embedded": "^1.85.1",
        "tailwindcss": "^3.4.17",
        "ts-node-dev": "^2.0.0",
        "tsnd": "^1.1.0",
        "tsup": "^8.4.0",
        "vite": "^6.1.0",
        "vite-plugin-vue-devtools": "^7.7.2"
    }
}
